@page
@model filmes.Models.RegistrarModel;
@{
    ViewBag.Title = "Registrar usuário";
}

<div>
    <div class="row">
        <h3 class="card-title mb-10">Registrar usuário</h3>
    </div>
    <div class="row">
        <section id="login">
            @using (Html.BeginForm("Registrar","Usuarios", FormMethod.Post, new { @class="form-horizontal", role="form"}))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(_ => _.Usuario, new { @class="control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.TextBoxFor(_ => _.Usuario, new { @class = "form-control" })
                        @Html.ValidationMessageFor(_ => _.Usuario, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(_ => _.Nome, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(_ => _.Nome, new { @class = "form-control" })
                        @Html.ValidationMessageFor(_ => _.Nome, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(_ => _.Senha, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.PasswordFor(_ => _.Senha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(_ => _.Senha, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(_ => _.Confirmacao, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.PasswordFor(_ => _.Confirmacao, new { @class = "form-control" })
                        @Html.ValidationMessageFor(_ => _.Confirmacao, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2 mt-20">
                        <input type="submit" class="btn btn-success" value="Registrar" />
                    </div>
                </div>
            }

        </section>
    </div>
</div>
