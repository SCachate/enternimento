@page
@model filmes.Models.RegistrarModel;
@{
    ViewBag.Title = "Excluir usuário";
}

<div>
    <div class="row">
        <h3 class="card-title mb-10">Confirma a exclusão do usuário?</h3>
    </div>
    <div class="row">
        <section id="login">
            @using (Html.BeginForm("Excluir","Usuarios", FormMethod.Post, new { @class="form-horizontal", role="form"}))
            {

                @Html.HiddenFor(_ => _.Usuario)
                @Html.HiddenFor(_ => _.Nome)
                @Html.HiddenFor(_ => _.Senha)

                <div class="form-group">
                    @Html.LabelFor(_ => _.Usuario, new { @class="control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.TextBoxFor(_ => _.Usuario, new { @readonly=true, @disabled=true, @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(_ => _.Nome, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(_ => _.Nome, new { @readonly = true, @disabled = true, @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2 mt-20">
                        <input type="submit" class="btn btn-danger" value="Excluir" />
                    </div>
                </div>
            }

        </section>
    </div>
</div>
