@page
@model filmes.Models.LoginModel;
@{
    ViewBag.Title = "Login";
}

<div>
    <div class="row">
        <h3 class="card-title">Acessar sistema</h3>
    </div>
    <div class="row">
        <section id="login">
            @using (Html.BeginForm("Login","Acesso", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, true, new { @class="form-horizontal", role="form"}))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(_ => _.Usuario, new { @class="control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.TextBoxFor(_ => _.Usuario, new { @class = "form-control" })
                        @Html.ValidationMessageFor(_ => _.Usuario, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(_ => _.Senha, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.PasswordFor(_ => _.Senha, new { @class = "form-control"})
                        @Html.ValidationMessageFor(_ => _.Senha, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(_ => _.LembrarMe) @Html.DisplayNameFor(_ => _.LembrarMe)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        <input type="submit" class="btn btn-success" value="Acessar" />
                    </div>
                </div>
            }

        </section>
    </div>
</div>
